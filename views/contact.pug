extends base.pug

block scripts
      script(src='/script/index.js')

block style
    style
      include ../static/style.css
      include ../static/styleContact.css

block content
      h2 Contact Us by filling form
      form(action="/contact",method="post")
            input(type='text', name='name', class="myinput", placeholder="Enter your name")
            input(type='phone', name='phone', class="myinput", placeholder="Enter your mobile number")
            input(type='email', name='email', class="myinput", placeholder="Enter your email")
            input(type='address', name='address', class="myinput", placeholder="Enter your adress")
            button#btn Submit 

